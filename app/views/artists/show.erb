<h1>Artist</h1>
<h2><%= @artist.name %></h2><br>

<h2>Songs</h2>
<% @artist.songs.each do |song| %>
    <h3><a href="/songs/<%= song.slug %>"><%= song.name %></a></h3>
<% end %>

<h2>Genres</h2>
<% unique_genres = @artist.genres.uniq %>
<% unique_genres.each do |genre| %>
    <h3><a href="/genres/<%= genre.slug %>"><%= genre.name %></a></h3>
<% end %>